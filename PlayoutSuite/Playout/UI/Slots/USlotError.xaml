<UserControl x:Class="Playout.UI.Slots.USlotError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="27" d:DesignWidth="690">
    <Grid Background="Red" Mouse.MouseEnter="Grid_MouseEnter">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="95*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Foreground="White" FontWeight="Bold" FontSize="15" x:Name="errormsg">-- error --</TextBlock>    
        <Button Grid.Column="1" Click="Button_Click">ok !</Button>
    </Grid>
</UserControl>
